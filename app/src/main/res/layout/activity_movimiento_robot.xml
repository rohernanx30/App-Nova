<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".movimiento_robot">

    <ImageView
        android:id="@+id/banner"
        style="@style/BotonSinFondo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:fontFamily="@font/century_gothic"
        android:hapticFeedbackEnabled="false"
        android:src="@drawable/arriba"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/candy_beans"
        android:gravity="center"
        android:text="Controles de movimiento"
        android:textColor="@color/black"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banner" />

    <ImageButton
        android:id="@+id/btn_derecha"
        style="@style/BotonSinFondo"
        android:layout_width="108dp"
        android:layout_height="150dp"
        android:layout_marginTop="330dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/derecha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.871"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_izquierda"
        style="@style/BotonSinFondo"
        android:layout_width="108dp"
        android:layout_height="150dp"
        android:layout_marginTop="330dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/izquierda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_adelante"
        style="@style/BotonSinFondo"
        android:layout_width="108dp"
        android:layout_height="150dp"
        android:layout_marginTop="216dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/mov_arriba"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnatras"
        style="@style/BotonSinFondo"
        android:layout_width="108dp"
        android:layout_height="150dp"
        android:layout_marginTop="436dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/abajo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/inicio"
        style="@style/BotonSinFondo"
        android:layout_width="70dp"
        android:layout_height="110dp"
        android:layout_marginTop="595dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/boton_inicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.304"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/listen"
        style="@style/BotonSinFondo"
        android:layout_width="70dp"
        android:layout_height="110dp"
        android:layout_marginTop="595dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/sonido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.683"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>